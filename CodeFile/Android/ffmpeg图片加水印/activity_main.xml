<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="fujisoft.videooverlaysample.MainActivity">

    <Button
            android:text="重ねる画像選択"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/select_logo_btn" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="重ねる位置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo_position_tv"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_iv"
            android:textSize="16sp" android:layout_marginStart="24dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/select_logo_btn"/>
    <TextView
            android:text="透明度"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/transparency_tv"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            android:textSize="16sp" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/select_logo_btn"/>
    <Button
            android:text="動画選択"
            android:layout_width="160dp"
            android:layout_height="wrap_content" android:id="@+id/video_select_btn"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/video_vv"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/video_vv"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="合成実行"
            android:layout_width="160dp"
            android:layout_height="wrap_content" android:id="@+id/compose_btn"
            android:enabled="false"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/video_select_btn"/>
    <ImageView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="#b4b3b3"
            android:id="@+id/logo_iv"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"
                                          tools:layout_editor_absoluteY="0dp"
                                          tools:layout_editor_absoluteX="192dp"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_iv"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:columnCount="3"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            android:id="@+id/gridLayout">

        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/left_top"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/center_top"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/right_top"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/left_center"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/center_center"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/right_center"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/left_bottom"
        />
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/center_bottom"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:background="@drawable/position_btn_selector"
                android:id="@+id/right_bottom"/>
    </GridLayout>
    <LinearLayout
            android:id="@+id/seekbar_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout"
            android:weightSum="1"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/gridLayout"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/gridLayout">
        <SeekBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:id="@+id/transparency_sb"/>
        <TextView
                android:text="0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/percent_tv"/>
    </LinearLayout>

    <VideoView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:id="@+id/video_vv"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekbar_ll"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            />
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="140dp"
            android:id="@+id/compose_pb"
            app:layout_constraintBottom_toBottomOf="@+id/compose_btn"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/seekbar_ll"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/seekbar_ll"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:visibility="gone"
            android:id="@+id/image_iv" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekbar_ll"/>

</android.support.constraint.ConstraintLayout>
