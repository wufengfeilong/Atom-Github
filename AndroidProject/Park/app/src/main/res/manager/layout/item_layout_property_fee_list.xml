<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="propertyFeeListBean"
            type="com.fcn.park.manager.bean.PropertyFeeListBean.ListPropertyBean" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- 公司名称 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{@string/manager_property_company_name + propertyFeeListBean.companyName}"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp" />

            <!-- 物业费用金额 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{@string/manager_property_fee + propertyFeeListBean.fee + @string/manager_property_fee_price }"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp" />

            <!-- 是否已缴费 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{@string/manager_property_fee_pay_status + (propertyFeeListBean.isPay == 1 ? @string/manager_property_fee_payed : @string/manager_property_fee_notpayed)}"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_do_with"
            style="@style/text_small_button"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_red_btn"
            android:text="催缴费"
            android:visibility="@{propertyFeeListBean.isPay == 1 ? View.GONE:View.VISIBLE }" />

    </LinearLayout>

</layout>