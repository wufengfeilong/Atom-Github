<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="advertisingTypePresenter"
            type="com.fcn.park.manager.presenter.ManagerAdvertisingTypePresenter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:onClick="@{()->advertisingTypePresenter.goAdvertisingUnApprovalList()}"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="广告位待审核"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:onClick="@{()->advertisingTypePresenter.goAdvertisingApprovaledList()}"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="广告位已审核"
                android:textColor="@color/colorTextBlack"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</layout>