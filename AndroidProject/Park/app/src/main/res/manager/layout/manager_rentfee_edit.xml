<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="rentFeeEditBean"
            type="com.fcn.park.manager.bean.RentFeeListBean.ListRentBean" />

        <variable
            name="rentFeeEditPresenter"
            type="com.fcn.park.manager.presenter.RentFeeEditPresenter" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_layout_title" />

        <ScrollView
            android:id="@+id/sl_manager_rent_fee_edit"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="9.0"
            android:background="@android:color/white"
            android:fitsSystemWindows="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="租赁面积："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/manager_rentFeeEdit_companySpace"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_et"
                        android:inputType="numberDecimal"
                        android:text="@{rentFeeEditBean.companySpace}"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平米"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="租赁费单价："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/manager_rentFeeEdit_unitPrice"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_et"
                        android:inputType="numberDecimal"
                        android:text="@{rentFeeEditBean.unitPrice}"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元/平米"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="开始年月："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/manager_rentFeeEdit_startDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:onClick="@{()->rentFeeEditPresenter.onStartDateClick()}"
                        android:text="@{rentFeeEditBean.startDate}"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="截止年月："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/manager_rentFeeEdit_endDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:onClick="@{()->rentFeeEditPresenter.onEndDateClick()}"
                        android:text="@{rentFeeEditBean.endDate}"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="租赁费折扣："
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/manager_rentFeeEdit_discount"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:entries="@array/rentFee_discount"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="租赁费合计："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/manager_rentFeeEdit_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@{rentFeeEditBean.fee}"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:text="备注内容："
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/manager_rentFeeEdit_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_et"
                        android:text="@{rentFeeEditBean.comment}"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/manager_rentFeeEdit_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{rentFeeEditBean.rentFeeId}"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1.0"
            android:background="@android:color/white"
            android:gravity="bottom"
            android:padding="5dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_btn"
                android:onClick="@{()->rentFeeEditPresenter.onClickSubmit()}"
                android:text="更 新"
                android:textColor="@color/colorTitleColor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</layout>