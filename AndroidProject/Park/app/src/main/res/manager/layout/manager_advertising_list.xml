<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="10.0">

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/manager_advertising_list_no_title" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/manager_advertising_list_approval_status_title" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/manager_advertising_list_rent_member_title" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/manager_advertising_list_start_date_title" />

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="center"
                android:text="@string/manager_advertising_list_end_date_title" />
        </LinearLayout>

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/spring_view_manager_advertising_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.fcn.park.base.widget.EmptyRecyclerView
                android:id="@+id/recycler_view_manager_advertising_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white" />

        </com.liaoinstan.springview.widget.SpringView>

        <include
            android:id="@+id/empty_view_manager_advertising_list"
            layout="@layout/include_empty_layout" />

    </LinearLayout>
</layout>