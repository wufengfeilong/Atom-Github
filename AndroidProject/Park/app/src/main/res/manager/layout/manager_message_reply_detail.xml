<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />
        <variable
            name="infoBean"
            type="com.fcn.park.manager.bean.ManagerMessageReplyDetailInfoBean"/>

        <variable
            name="messageReplyDetailPresenter"
            type="com.fcn.park.manager.presenter.ManagerMessageReplyDetailPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="10.0">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="9.0"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="留言人："
                        android:textSize="@dimen/manager_repairs_detail_size" />

                    <TextView
                        android:id="@+id/reply_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="@{infoBean.userName}"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/manager_repairs_detail_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="留言内容:"
                        android:textSize="@dimen/manager_repairs_detail_size" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/reply_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:ellipsize="end"
                            android:inputType="textMultiLine"
                            android:maxLines="8"
                            android:text="@{infoBean.describeContent}"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/manager_repairs_detail_size" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="回复内容："
                        android:textSize="@dimen/manager_repairs_detail_size" />

                    <EditText
                        android:id="@+id/manager_reply_answer"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_et"
                        android:gravity="top"
                        android:hint="回复时，请输入内容"
                        android:textSize="@dimen/manager_repairs_detail_size" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="1.0"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_blue_btn"
                    android:onClick="@{()->messageReplyDetailPresenter.replyOnClick()}"
                    android:text="回复"
                    android:textColor="@color/colorTitleColor"
                    android:textSize="@dimen/manager_repairs_detail_size" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>