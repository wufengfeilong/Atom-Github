<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="newsListBean"
            type="com.fcn.park.info.bean.NewsListBean.GetlistNewsBean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/info_manager_demand_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="@{newsListBean.title}"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/info_empty_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/info_news_padding_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_update_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{newsListBean.updateTimeStamp}" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/info_list_image_width"
            android:layout_height="@dimen/info_list_image_height"
            android:scaleType="centerCrop"
            android:visibility="@{newsListBean.news_thumbnail == null?View.GONE:View.VISIBLE}"
            binding:imageUrl="@{newsListBean.news_thumbnail}" />
    </LinearLayout>
</layout>