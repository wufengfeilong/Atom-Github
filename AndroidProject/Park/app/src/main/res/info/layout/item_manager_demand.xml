<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="demandListBean"
            type="com.fcn.park.info.bean.ManagerDemandListBean.DemandListBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/info_manager_demand_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="@{demandListBean.title}"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/info_empty_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/info_news_padding_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_manager_contract" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{demandListBean.contact}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/info_news_padding_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_enterprise_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{demandListBean.tel}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/info_news_padding_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_source" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{demandListBean.source}" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/info_list_image_width"
            android:layout_height="@dimen/info_list_image_width"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/people"
            android:visibility="@{demandListBean.category == 1 ? View.GONE:View.VISIBLE}" />


        <ImageView
            android:layout_width="@dimen/info_list_image_width"
            android:layout_height="@dimen/info_list_image_width"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/project"
            android:visibility="@{demandListBean.category ==0 ? View.GONE:View.VISIBLE}" />

    </LinearLayout>
</layout>