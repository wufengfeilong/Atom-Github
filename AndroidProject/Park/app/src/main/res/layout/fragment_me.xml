<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <variable
            name="presenter"
            type="com.fcn.park.me.MePresenter" />

        <variable
            name="user"
            type="com.fcn.park.login.bean.User" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/manager_windowBackground"
        android:orientation="vertical">

        <include layout="@layout/app_layout_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/manager_colorManagerMenuSpace">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="@color/colorBlue"
                    android:gravity="center_vertical"
                    android:onClick="@{()->presenter.onClickGoProjectInfo()}"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        binding:errorImage="@{@drawable/ic_vector_default_avatar}"
                        binding:imageCircleUrl="@{user.avatar}" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="@{TextUtils.isEmpty(user.userName)?@string/manager_user_name:user.userName}"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/iv_go"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_vector_go_white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View style="@style/manager_divider_line" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />


                </LinearLayout>

                <com.fcn.park.manager.widget.NestRecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <View style="@style/manager_divider_line_light" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>
