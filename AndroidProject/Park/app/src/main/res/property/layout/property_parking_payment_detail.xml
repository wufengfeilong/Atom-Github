<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bean"
            type="com.fcn.park.property.bean.PropertyMainBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/property_default_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/property_payment_type"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/property_payment_type_parking"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/property_temporary_park_plate_num"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@{bean.plateNum}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/property_payment_num"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@{bean.parkingPayNum + @string/property_yuan}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@{bean.payType == 6 ? @string/property_temporary_park_enter_time : @string/property_rent_park_start_time}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@{bean.startDate}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@{bean.payType == 6 ? @string/property_temporary_park_exit_time : @string/property_rent_park_end_time}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@{bean.endDate}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@string/property_payment_time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:text="@{bean.paymentTime}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/property_middle_text_size" />
        </LinearLayout>
    </LinearLayout>
</layout>