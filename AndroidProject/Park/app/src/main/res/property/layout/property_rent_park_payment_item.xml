<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bean"
            type="com.fcn.park.property.bean.PropertyMainBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/property_rent_park_item_min_height"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/property_default_margin"
            android:layout_marginRight="@dimen/property_default_margin"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="@{@string/property_payment_time + bean.paymentTime}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/property_min_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/property_default_margin"
            android:layout_marginRight="@dimen/property_default_margin"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="@{@string/property_payment_plate_num + bean.plateNum}"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/property_min_text_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@{@string/property_payment_num + bean.parkingPayNum + @string/property_yuan}"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/property_item_mini_text_size" />
        </LinearLayout>

    </LinearLayout>
</layout>