<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="英雄黑色墨水"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_name" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:text="在庫数:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/barcode" android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/barcode" android:layout_marginBottom="0dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline6"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.6"/>
    <TextView
            android:text="150"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            app:layout_constraintTop_toTopOf="@+id/textView13" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView13" android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView13" android:layout_marginLeft="0dp"
    />
    <TextView
            android:text="個"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/price" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/price" android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/price" android:layout_marginLeft="0dp"/>
    <TextView
            android:text="コード番号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/textView16" android:textSize="16sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/goods_name"/>
    <TextView
            android:text="6940328702047"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barcode"
            android:ellipsize="marquee"
            android:maxEms="7"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:lines="1"
            app:layout_constraintTop_toTopOf="@+id/textView16" android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView16" android:layout_marginBottom="0dp"
            android:textSize="16sp" app:layout_constraintLeft_toRightOf="@+id/textView16"
            android:layout_marginLeft="8dp" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
