<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/btn_filled_blue_bg_disabled"
                tools:context="com.fujisoft.test.activity.TabbedActivity$PlaceholderFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_num"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:text="12/15"
            android:padding="8dp"
            android:background="@color/qmui_config_color_blue"
    />
    <TextView
            android:text="当前市场手机系统占比最多的是？"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/question_title" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/question_num"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp" app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/question_title"
            android:id="@+id/options">
        <RadioButton
                android:text="IOS系统"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qa" android:layout_marginLeft="32dp" app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/question_title"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Android系统"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/qb"
                android:layout_marginLeft="32dp" app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/qa" android:layout_weight="1"/>
        <RadioButton
                android:text="WP系统"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/qc"
                android:layout_marginLeft="32dp" app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/qb" android:layout_weight="1"/>
        <RadioButton
                android:text="塞班系统"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/qd"
                android:layout_marginLeft="32dp" app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/qc" android:layout_weight="1"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>
