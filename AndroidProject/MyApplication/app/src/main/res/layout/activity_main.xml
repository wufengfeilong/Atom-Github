<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fujisoft.test.activity.MainActivity">

    <Button
            android:text="大家一起来画图 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toDrawing" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent" android:onClick="toDrawing"/>
    <Button
            android:text="打开PDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openPDF" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/toDrawing"
            android:onClick="openPDF"/>


</android.support.constraint.ConstraintLayout>
