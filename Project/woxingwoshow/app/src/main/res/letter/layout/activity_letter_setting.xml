<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.letter.presenter.LetterSettingPresenter" />

        <variable
            name="bean"
            type="sdwxwx.com.letter.bean.PrivateLetterBean.LetterBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/letter_setting_title"
            app:presenter="@{presenter}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/letter_item_layout_height"
            android:layout_marginBottom="@dimen/release_margin"
            android:layout_marginTop="@dimen/release_margin"
            android:background="@android:color/white"
            android:onClick="@{()->presenter.userInfor()}"
            android:paddingBottom="@dimen/release_margin_middle"
            android:paddingTop="@dimen/release_margin_middle">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/letter_setting_head"
                android:layout_width="@dimen/letter_item_head_height"
                android:layout_height="@dimen/letter_item_head_height"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/release_margin_middle"
                android:layout_marginStart="@dimen/release_margin"
                android:src="@drawable/default_header_image" />

            <TextView
                android:id="@+id/letter_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/release_margin_middle"
                android:layout_toEndOf="@+id/letter_setting_head"
                android:layout_toStartOf="@+id/read_info"
                android:ellipsize="marquee"
                android:gravity="center_vertical|start"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/general_text_size" />

            <ImageView
                android:id="@+id/right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin_small"
                android:scaleType="centerInside"
                android:src="@drawable/setting_right_icon" />

            <TextView
                android:id="@+id/read_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/right_icon"
                android:gravity="end|center_vertical"
                android:text="查看资料"
                android:textColor="@android:color/black"
                android:textSize="@dimen/comment_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_list_item_height"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/release_margin"
            android:layout_marginTop="@dimen/release_margin_small"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/release_margin"
                android:gravity="center_vertical|start"
                android:text="消息免打扰"
                android:textColor="@android:color/black"
                android:textSize="@dimen/comment_size" />

            <ImageView
                android:id="@+id/letter_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/release_margin"
                android:contentDescription="@null"
                android:src="@drawable/letter_switch_btn_off" />
        </RelativeLayout>

        <TextView
            android:id="@+id/empty_conversation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_list_item_height"
            android:layout_marginTop="@dimen/release_margin"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="清空消息记录"
            android:textColor="@android:color/black"
            android:textSize="@dimen/comment_size" />

        <TextView
            android:id="@+id/delete_conversation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_list_item_height"
            android:layout_marginTop="@dimen/release_line"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="删除对话"
            android:textColor="@android:color/black"
            android:textSize="@dimen/comment_size" />
    </LinearLayout>
</layout>

