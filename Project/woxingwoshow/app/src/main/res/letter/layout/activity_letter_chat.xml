<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.letter.presenter.LetterChatPresenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graySimple"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <include
                layout="@layout/letter_chat_title"
                app:presenter="@{presenter}" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/letter_chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/send_letter_ll"
            android:layout_below="@+id/title"
            android:layout_marginBottom="@dimen/release_margin"
            android:layout_marginTop="@dimen/release_margin" />

        <LinearLayout
            android:id="@+id/send_letter_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_list_item_height"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/release_margin"
            android:paddingStart="@dimen/release_margin">

            <EditText
                android:id="@+id/send_letter_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/release_margin_small"
                android:layout_marginTop="@dimen/release_margin_small"
                android:layout_weight="8"
                android:background="@drawable/chat_dialog_shape"
                android:hint="发消息..."
                android:paddingLeft="@dimen/letter_list_edit_padding"
                android:paddingRight="@dimen/letter_list_edit_padding"
                android:textSize="@dimen/comment_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/send_letter_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/release_margin_middle"
                android:layout_marginTop="@dimen/release_margin_middle"
                android:layout_weight="2"
                android:background="@drawable/send_btn_selector"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@color/send_btn_text_selector"
                android:textSize="@dimen/comment_size" />
        </LinearLayout>
    </RelativeLayout>
</layout>
