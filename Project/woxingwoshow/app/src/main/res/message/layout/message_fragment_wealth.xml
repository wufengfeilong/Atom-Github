<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="presenter"
            type="woxingwoxiu.com.message.presenter.MessageWealthFragmentPresenter"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:background="@drawable/wealth_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="财富值"
                android:textColor="@color/userwhite"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="120"
                android:textColor="@color/userwhite"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="今日收益"
                android:textColor="@color/userwhite"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/userwhite"
                android:textSize="25dp" />
        </LinearLayout>

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/wealth_grade_springView"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/wealth_grade_tg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </com.liaoinstan.springview.widget.SpringView>

    </LinearLayout>
</layout>
