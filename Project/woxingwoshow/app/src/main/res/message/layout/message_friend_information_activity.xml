<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="presenter"
            type="woxingwoxiu.com.message.presenter.MessageFriendInformationPresenter"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_cross"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:src="@drawable/left" />

            <TextView
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A蓝精灵"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="29dp"
                android:layout_height="match_parent"
                android:src="@drawable/share_black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <!--个人头像-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="0dp">
                <!--粉丝，关注，火力-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="63dp"
                        android:layout_height="48dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="26dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="460万"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="63dp"
                            android:layout_height="23dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="粉丝"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="53dp"
                        android:layout_height="48dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="27dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="18"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="53dp"
                            android:layout_height="40dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="关注"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="1680"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="49dp"
                            android:layout_height="40dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="我的团队"
                            android:textSize="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="63dp"
                        android:layout_height="48dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="62dp"
                            android:layout_height="26dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="888万"
                            android:textColor="#000000"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="63dp"
                            android:layout_height="23dp"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:text="财富值"
                            android:textSize="10dp" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 发私信，取消关注，推荐用户-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="126dp"
                        android:layout_height="60dp"
                        android:src="@drawable/send_information_photos" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/no_like_photos" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--个人所在位置，性别，简介-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:src="@drawable/position" />
                <TextView
                    android:layout_width="50dp"
                    android:paddingLeft="12dp"
                    android:layout_height="20dp"
                    android:text="北京 "
                    android:gravity="center"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="60dp"
                    android:paddingLeft="0dp"
                    android:layout_height="20dp"
                    android:text="女"
                    android:gravity="center"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="60dp"
                    android:paddingLeft="0dp"
                    android:layout_height="20dp"
                    android:text="95后"
                    android:gravity="center"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="30dp"
                    android:text="大家好，我是小猪佩奇，欢迎大家哦~"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/action_start" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:gravity="left"
                    android:paddingLeft="30dp"
                    android:text="52"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
        <!--下拉刷新控件-->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/grid_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" >
            <!--RecyclerView-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/grid_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

</layout>
