<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="Bean"
            type="sdwxwx.com.home.bean.RecommendUserBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/letter_item_layout_height"
        android:layout_marginBottom="@dimen/release_line"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/release_margin_middle">
        <RelativeLayout
                android:layout_width="@dimen/letter_item_head_height"
                android:layout_height="@dimen/letter_item_head_height">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_url"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_header_image" />
            <ImageView
                    android:id="@+id/avatar_url_vip"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vip_icon"
                    android:layout_alignRight="@+id/avatar_url"
                    android:layout_alignBottom="@id/avatar_url"
            />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/release_margin_small"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/team_grade_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@{Bean.nickname}"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/general_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="start|center_vertical"
                        android:text="注册时间："
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/comment_size" />

                    <TextView
                        android:id="@+id/team_reg_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:lines="1"
                        android:text="@{Bean.create_time}"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/comment_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/release_line"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/release_margin"
                    android:layout_marginStart="@dimen/release_margin"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="start|center_vertical"
                            android:text="推荐财富值："
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/comment_size" />

                        <TextView
                            android:id="@+id/wealth_recommend"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:lines="1"
                            android:text="@{Bean.recommend_wealth}"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/comment_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="start|center_vertical"
                            android:singleLine="true"
                            android:text="视频财富值："
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/comment_size" />

                        <TextView
                            android:id="@+id/wealth_movie"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="end"
                            android:gravity="start|center_vertical"
                            android:lines="1"
                            android:text="@{Bean.video_wealth}"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/comment_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
