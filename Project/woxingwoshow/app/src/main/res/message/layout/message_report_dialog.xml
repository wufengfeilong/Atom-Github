<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/feedback_style"
    android:orientation="vertical"
    android:padding="@dimen/release_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/release_margin_small"
        android:paddingTop="@dimen/release_margin_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:text="举报人："
            android:textSize="@dimen/general_text_size" />

        <TextView
            android:id="@+id/msg_report_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/release_margin_small"
            android:text="我行我秀"
            android:textSize="@dimen/general_text_size" />
    </LinearLayout>

    <EditText
        android:id="@+id/feedback_content"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/chat_dialog_shape"
        android:gravity="top|start"
        android:hint="请输入举报原因"
        android:padding="@dimen/release_margin_middle"
        android:textSize="@dimen/comment_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/release_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/general_text_size" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/general_text_size" />
    </LinearLayout>
</LinearLayout>