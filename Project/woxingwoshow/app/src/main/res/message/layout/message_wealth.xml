<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="presenter"
            type="woxingwoxiu.com.message.presenter.MessageWealthPresenter"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/wealth_fragment_tab_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/title_back_img"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickBack()}">

                <ImageView
                    android:id="@+id/feedback_back"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/left_white"/>
            </LinearLayout>
            <woxingwoxiu.com.widget.TabLayout
            android:id="@+id/wealth_fragment_tl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:tabTextColor="#CFCFCF"
            android:layout_weight="6"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white">
            </woxingwoxiu.com.widget.TabLayout>
        </LinearLayout>
        <woxingwoxiu.com.widget.ScrollViewPager
            android:id="@+id/wealth_fragment_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </woxingwoxiu.com.widget.ScrollViewPager>
    </LinearLayout>
</layout>
