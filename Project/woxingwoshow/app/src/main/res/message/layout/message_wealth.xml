<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.message.presenter.MessageWealthPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/wealth_fragment_tab_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/immersion_title_bar_height"
            android:background="@drawable/title_back_img">

            <ImageView
                android:id="@+id/feedback_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:onClick="@{()->presenter.onClickBack()}"
                android:padding="@dimen/release_margin"
                android:scaleType="centerInside"
                android:src="@drawable/back_white" />

            <sdwxwx.com.widget.TabLayout
                android:id="@+id/wealth_fragment_tl"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/feedback_back"
                android:layout_gravity="bottom"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                app:tabIndicatorColor="@android:color/white"
                app:tabSelectedTextColor="@android:color/white"
                app:tabTextColor="#CFCFCF" />
        </RelativeLayout>

        <sdwxwx.com.widget.ScrollViewPager
            android:id="@+id/wealth_fragment_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
