<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/letter_item_layout_height"
    android:minHeight="@dimen/letter_item_layout_height"
    android:layout_marginTop="@dimen/release_line"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/attention_head"
        android:layout_width="@dimen/letter_item_head_height"
        android:layout_height="@dimen/letter_item_head_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/release_margin_middle"
        android:layout_marginStart="@dimen/release_margin"
        android:src="@drawable/default_header_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/release_margin_small"
        android:layout_marginEnd="@dimen/release_margin_middle"
        android:layout_marginTop="@dimen/release_margin_small"
        android:layout_toEndOf="@+id/attention_head"
        android:layout_toStartOf="@+id/is_followed"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:lines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/comment_size" />

        <TextView
            android:id="@+id/attention_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:lines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/common_small_size" />
    </LinearLayout>

    <ImageView
        android:id="@id/is_followed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/release_margin"
        android:src="@drawable/message_attention" />
</RelativeLayout>