<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="Bean"
            type="sdwxwx.com.me.bean.VideoWealthBean.WealthHistoryBean" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_double_list_item_height"
        android:layout_marginBottom="@dimen/release_line"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/release_margin"
            android:layout_toStartOf="@+id/wealth_count"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wealth_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="start|bottom"
                android:singleLine="true"
                android:text="@{Bean.action}"
                android:textColor="@android:color/black"
                android:textSize="@dimen/general_text_size" />

            <TextView
                android:id="@+id/wealth_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:text="@{Bean.create_time}"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/comment_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/wealth_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin_middle"
            android:ellipsize="marquee"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="@{Bean.wealth}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/release_middle_text_size" />
    </RelativeLayout>
</layout>
