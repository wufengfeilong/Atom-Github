<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/letter_item_layout_height"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/assistant_head"
        android:layout_width="@dimen/letter_item_head_height"
        android:layout_height="@dimen/user_list_item_head_height"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="@dimen/release_margin_middle"
        android:layout_marginStart="@dimen/release_margin"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/release_margin_small"
        android:layout_marginTop="@dimen/release_margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/assistant_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:text="我行我秀小助手"
            android:textColor="@android:color/black"
            android:textSize="@dimen/general_text_size" />

        <TextView
            android:id="@+id/assistant_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:text="1小时前"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/common_small_size" />

        <TextView
            android:id="@+id/assistant_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="欢迎加入我行我秀，用视频记录你的精彩"
            android:textColor="@android:color/black"
            android:textSize="@dimen/comment_size" />
    </LinearLayout>
</LinearLayout>
