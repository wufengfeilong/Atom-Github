<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.message.presenter.MessageRecommendWealthFragmentPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/wealth_bg"
            android:paddingTop="@dimen/release_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/release_margin"
                    android:gravity="center"
                    android:text="@string/fans_home_wealth"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/login_middle_text_size" />

                <TextView
                    android:id="@+id/total_wealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/release_margin_middle"
                    android:layout_marginTop="@dimen/release_margin"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/login_middle_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/release_margin"
                    android:gravity="center"
                    android:text="今日收益"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/release_middle_text_size" />

                <TextView
                    android:id="@+id/today_wealth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/release_margin"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/release_middle_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_double_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/wealth_count"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:text="原始财富值"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/general_text_size" />

                <TextView
                    android:id="@+id/wealth_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/release_middle_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_double_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/wealth_one"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:text="一级财富值"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/general_text_size" />

                <TextView
                    android:id="@+id/wealth_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/release_middle_text_size" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_double_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/wealth_two"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    android:text="二级财富值"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/general_text_size" />

                <TextView
                    android:id="@+id/wealth_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/release_middle_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
