<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.release.presenter.RecordPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/release_more_menu_height"
        android:alpha="0.6"
        android:background="@android:color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/release_camera_speed"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/release_camera_speed_normal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{()->presenter.onMoreItemClick(1)}"
                android:text="@string/release_camera_speed_normal"
                android:textColor="@color/record_more_menu_selector" />

            <TextView
                android:id="@+id/release_camera_speed_slow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{()->presenter.onMoreItemClick(2)}"
                android:text="@string/release_camera_speed_slow"
                android:textColor="@color/record_more_menu_selector" />

            <TextView
                android:id="@+id/release_camera_speed_fast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{()->presenter.onMoreItemClick(3)}"
                android:text="@string/release_camera_speed_fast"
                android:textColor="@color/record_more_menu_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/release_camera_count_down"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/release_camera_count_down_no"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{()->presenter.onMoreItemClick(4)}"
                android:text="@string/release_camera_count_down_no"
                android:textColor="@color/record_more_menu_selector" />

            <TextView
                android:id="@+id/release_camera_count_down_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{()->presenter.onMoreItemClick(5)}"
                android:text="@string/release_camera_count_down_3"
                android:textColor="@color/record_more_menu_selector" />

            <TextView
                android:id="@+id/release_camera_count_down_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{()->presenter.onMoreItemClick(6)}"
                android:text="@string/release_camera_count_down_10"
                android:textColor="@color/record_more_menu_selector" />
        </LinearLayout>
    </LinearLayout>
</layout>
