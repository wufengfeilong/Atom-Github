<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="38dp"
              android:orientation="horizontal">
        <TextView
            android:id="@+id/record_speed_0_5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.5x"
            android:textColor="@drawable/record_text_color"
            android:textSize="@dimen/config_text_size"
            android:background="@drawable/record_text_border"/>
        <TextView
            android:id="@+id/record_speed_1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1x"
            android:textColor="@drawable/record_text_color"
            android:textSize="@dimen/config_text_size"
            android:background="@drawable/record_text_border"/>
        <TextView
            android:id="@+id/record_speed_1_5"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1.5x"
            android:gravity="center"
            android:textColor="@drawable/record_text_color"
            android:textSize="@dimen/config_text_size"
            android:background="@drawable/record_text_border"/>
        <TextView
            android:id="@+id/record_speed_2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2x"
            android:textColor="@drawable/record_text_color"
            android:textSize="@dimen/config_text_size"
            android:background="@drawable/record_text_border"/>
</LinearLayout>