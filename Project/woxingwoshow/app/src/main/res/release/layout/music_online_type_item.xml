<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bean"
            type="sdwxwx.com.bean.MusicTypeBean" />
        <variable
            name="presenter"
            type="sdwxwx.com.release.presenter.MusicOnlinePresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
       >

        <ImageView
            android:id="@+id/release_online_music_typeUrl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/me_selected"/>

        <TextView
            android:id="@+id/release_online_music_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="流行音乐"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

    </LinearLayout>
</layout>
