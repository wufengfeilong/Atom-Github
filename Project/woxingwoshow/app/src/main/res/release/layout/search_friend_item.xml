<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/add_topic_item_height"
    android:layout_marginTop="@dimen/release_line"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_icon_img"
        android:layout_width="@dimen/friend_item_icon_height"
        android:layout_height="@dimen/friend_item_icon_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/release_margin_middle"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/default_header_image"
        app:civ_border_color="#0000"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/user_name_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/release_margin_middle"
        android:layout_toEndOf="@+id/user_icon_img"
        android:layout_toStartOf="@+id/topic_tag_img"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/release_middle_text_size" />

</RelativeLayout>