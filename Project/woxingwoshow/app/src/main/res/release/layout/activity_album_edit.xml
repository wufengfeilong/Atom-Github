<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="sdwxwx.com.release.activity.AlbumEditActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/album_edit_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/album_edit_back_btn"
            android:layout_width="@dimen/album_edit_back_btn_height"
            android:layout_height="@dimen/album_edit_back_btn_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/release_margin_middle"
            android:background="@drawable/release_gray_circle_shape"
            android:gravity="center"
            android:onClick="onMenuClick"
            android:paddingEnd="@dimen/release_margin_small"
            android:scaleType="centerInside"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/album_edit_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/release_margin_middle"
            android:background="@drawable/release_gradient_shape"
            android:gravity="center"
            android:onClick="onMenuClick"
            android:paddingBottom="@dimen/release_margin_small"
            android:paddingEnd="@dimen/release_margin"
            android:paddingStart="@dimen/release_margin"
            android:paddingTop="@dimen/release_margin_small"
            android:text="@string/release_album_edit_btn_tx"
            android:textColor="@android:color/white"
            android:textSize="@dimen/release_small_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/album_edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/release_margin"
            android:background="@drawable/album_edit_remind_bg"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="@dimen/release_margin_small"
            android:paddingEnd="@dimen/release_margin"
            android:paddingStart="@dimen/release_margin"
            android:paddingTop="@dimen/release_margin_small"
            android:text="@string/release_album_edit_tx"
            android:textColor="@android:color/white" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_below="@+id/album_edit_txt"
            android:layout_marginBottom="@dimen/release_margin_small">

            <sdwxwx.com.release.videorange.HorizontalListView
                android:id="@+id/edit_img_list"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:requiresFadingEdge="horizontal" />

            <sdwxwx.com.release.videorange.VideoRangeSeekBar xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/seek_bar"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:background="#00ffffff"
                custom:gradientWidth="20dp"
                custom:indicatorWidth="4dp"
                custom:thumbBandHeight="59dp"
                custom:thumbWidth="20dp" />

        </FrameLayout>
    </RelativeLayout>
</FrameLayout>
