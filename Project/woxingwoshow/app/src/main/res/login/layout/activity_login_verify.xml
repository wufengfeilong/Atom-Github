<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="numbean"
            type="sdwxwx.com.login.bean.LoginVerifyBean.VerifyBean" />

        <variable
            name="verifyPresenter"
            type="sdwxwx.com.login.presenter.LoginVerifyPresenter" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/login_title_rl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/release_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:onClick="@{()->verifyPresenter.onCross()}"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/login_multiply" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_text_Tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/release_margin"
            android:text="@{numbean.phoneNumSpace}"
            android:textColor="@color/bright_foreground_light_disabled"
            android:textSize="@dimen/login_middle_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/release_line"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin">

            <sdwxwx.com.login.utils.VeriftyEditText
                android:id="@+id/login_verify_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_get_verify"
                android:background="@android:color/white"
                android:digits="1234567890"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="@dimen/login_large_text_size" />

            <TextView
                android:id="@+id/tv_get_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@android:color/white"
                android:gravity="center"
                android:onClick="@{()->verifyPresenter.onClickGetVerify()}"
                android:text="获取验证码"
                android:textColor="@color/login_red"
                android:textSize="@dimen/comment_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/release_line"
            android:layout_marginBottom="@dimen/release_margin"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/login_verify_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/release_margin"
            android:contentDescription="@null"
            android:onClick="@{()->verifyPresenter.onNext()}"
            android:scaleType="centerInside"
            android:src="@drawable/focused_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin">

            <CheckBox
                android:id="@+id/login_verify_agree"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/release_margin_middle"
                android:background="@drawable/checkbox_pressed"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:id="@+id/login_verify_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/login_verify_agree"
                android:gravity="center_vertical|start"
                android:onClick="@{()->verifyPresenter.onClickGoUserAgreement()}"
                android:text="@string/agreement_agree" />
        </RelativeLayout>
    </LinearLayout>
</layout>
