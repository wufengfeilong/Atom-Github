<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="presenter" type="woxingwoxiu.com.login.presenter.NotLoginInterfacePresenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/not_login_title_ll"
            android:background="@drawable/title_back_img"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:elevation="5dp">

            <LinearLayout
                android:id="@+id/no_login_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="0.5"
                android:onClick="@{()->presenter.onSearch()}"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/no_loginsearch"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="bottom|center">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="登录/注册"
                    android:onClick="@{()->presenter.onLogin()}"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/not_login_video_springView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/not_login_video_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </com.liaoinstan.springview.widget.SpringView>

    </LinearLayout>
</layout>