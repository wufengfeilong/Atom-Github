<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginPresenter"
            type="sdwxwx.com.login.presenter.LoginPresenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/login_title_rl"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/release_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_cross_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/login_multiply" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title_rl"
            android:layout_marginTop="@dimen/release_margin"
            android:gravity="center"
            android:text="注册登录后体验更多精彩瞬间"
            android:textColor="@color/dim_foreground_dark"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/release_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/release_margin_middle"
                android:layout_marginEnd="@dimen/release_margin"
                android:layout_marginStart="@dimen/release_margin"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/login_weixin" />

            <ImageView
                android:id="@+id/login_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/release_margin_middle"
                android:layout_marginEnd="@dimen/release_margin"
                android:layout_marginStart="@dimen/release_margin"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/login_qq" />

            <ImageView
                android:id="@+id/login_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/release_margin"
                android:layout_marginEnd="@dimen/release_margin"
                android:layout_marginStart="@dimen/release_margin"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/login_tel" />
        </LinearLayout>
    </RelativeLayout>
</layout>
