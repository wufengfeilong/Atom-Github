<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="dataEditingPresenter"
            type="sdwxwx.com.login.presenter.DataEditingPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/release_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_cross"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:onClick="@{()->dataEditingPresenter.onCross()}"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin"
                android:scaleType="centerInside"
                android:src="@drawable/login_multiply" />

            <TextView
                android:id="@+id/login_problem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|end"
                android:onClick="@{()->dataEditingPresenter.onJump()}"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin"
                android:text="跳过"
                android:textColor="@android:color/black"
                android:textSize="@dimen/comment_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin"
            android:layout_marginTop="@dimen/release_margin"
            android:text="编辑资料"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/login_middle_text_size" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_personal_icon"
            android:layout_width="@dimen/user_info_head_width"
            android:layout_height="@dimen/user_info_head_width"
            android:layout_marginStart="@dimen/release_margin"
            android:layout_marginTop="@dimen/release_margin"
            android:onClick="@{()->dataEditingPresenter.onClickImage()}"
            android:scaleType="centerCrop"
            android:src="@drawable/login_header" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin"
            android:hint="请输入昵称"
            android:inputType="textPersonName"
            android:maxLength="13"
            android:textSize="30sp"
            android:theme="@style/MyEditText" />

        <ImageView
            android:id="@+id/login_next_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin"
            android:layout_marginTop="@dimen/release_margin"
            android:contentDescription="@null"
            android:onClick="@{()->dataEditingPresenter.onClickOk()}"
            android:scaleType="centerInside"
            android:src="@drawable/focused_ok" />
    </LinearLayout>
</layout>
