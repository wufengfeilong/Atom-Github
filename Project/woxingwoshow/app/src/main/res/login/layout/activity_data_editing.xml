<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="dataEditingPresenter"
            type="woxingwoxiu.com.login.presenter.DataEditingPresenter"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/login_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_multiply"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:onClick="@{()->dataEditingPresenter.onCross()}"
                />
            <TextView
                android:id="@+id/login_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="跳过"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:onClick="@{()->dataEditingPresenter.onJump()}"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编辑资料"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/bright_foreground_light_disabled"
                />

            <ImageView
                android:id="@+id/iv_personal_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/login_name"
                android:layout_below="@+id/login_data"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_header"
                android:onClick="@{()->dataEditingPresenter.onClickImage()}"
                />

            <EditText
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_personal_icon"
                android:hint="请输入昵称"
                android:inputType="textPersonName"
                android:layout_margin="10dp"
                android:maxLength="13"
                android:textSize="30sp"
                android:theme="@style/MyEditText"
                />

            <Button
                android:id="@+id/login_next_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_name"
                android:background="@drawable/login_ok"
                android:onClick="@{()->dataEditingPresenter.onClickOk()}"
                />

        </RelativeLayout>
    </RelativeLayout>
</layout>
