<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="loginPhonePresenter"
            type="woxingwoxiu.com.login.presenter.LoginPhonePresenter"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#01000000"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/login_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_multiply"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:onClick="@{()->loginPhonePresenter.onCross()}" />
            <TextView
                android:id="@+id/login_problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{()->loginPhonePresenter.onProblem()}"
                android:text="遇到问题？"
                android:padding="20dp"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:padding="10dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login_text_Tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手机号登录"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/bright_foreground_light_disabled"
                />

            <woxingwoxiu.com.login.utils.ZpPhoneEditText
                android:id="@+id/login_phone_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_text_Tel"
                android:digits="1234567890"
                android:hint="请输入手机号"
                android:inputType="phone|number"
                android:layout_margin="10dp"
                android:maxLength="13"
                android:textSize="30sp"
                android:theme="@style/MyEditText"
               />
            <Button
                android:id="@+id/login_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/focused_text"
                android:layout_below="@id/login_phone_num"
                android:onClick="@{()->loginPhonePresenter.onNext()}" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
