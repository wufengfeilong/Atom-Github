<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="loginPhonePresenter"
            type="sdwxwx.com.login.presenter.LoginPhonePresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/release_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:onClick="@{()->loginPhonePresenter.onCross()}"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/login_multiply" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_text_Tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin"
            android:text="手机号登录"
            android:textColor="@color/bright_foreground_light_disabled"
            android:textSize="@dimen/login_middle_text_size" />

        <sdwxwx.com.login.utils.ZpPhoneEditText
            android:id="@+id/login_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/release_margin"
            android:digits="1234567890"
            android:hint="请输入手机号"
            android:inputType="phone|number"
            android:maxLength="13"
            android:textSize="@dimen/login_large_text_size"
            android:theme="@style/MyEditText" />

        <ImageView
            android:id="@+id/login_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/release_margin"
            android:contentDescription="@null"
            android:onClick="@{()->loginPhonePresenter.onNext()}"
            android:scaleType="centerInside"
            android:src="@drawable/focused_text" />
    </LinearLayout>
</layout>
