<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.me.presenter.SettingPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graySimple"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/find_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:contentDescription="@null"
                android:onClick="@{()->presenter.onClickBack()}"
                android:paddingEnd="@dimen/release_margin"
                android:paddingStart="@dimen/release_margin"
                android:scaleType="centerInside"
                android:src="@drawable/back_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/release_set"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_title_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/release_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickQrCode()}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/release_margin"
                    android:text="@string/my_qr_code"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/comment_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/release_margin"
                    android:paddingStart="@dimen/release_margin_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_right_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickCertify()}">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/release_margin"
                    android:text="实名认证"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/comment_size" />

                <TextView
                    android:id="@+id/is_certified"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/certify_icon"
                    android:gravity="center_vertical|end"
                    android:text="未认证"
                    android:textSize="@dimen/comment_size" />

                <ImageView
                    android:id="@+id/certify_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/release_margin"
                    android:paddingStart="@dimen/release_margin_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_right_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickClearCaches()}"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/release_margin"
                    android:text="清理缓存"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/comment_size" />

                <TextView
                    android:id="@+id/cachesSize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/cache_size_icon"
                    android:gravity="center_vertical|end"
                    android:text="0.00MB"
                    android:textSize="@dimen/comment_size" />

                <ImageView
                    android:id="@+id/cache_size_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/release_margin"
                    android:paddingStart="@dimen/release_margin_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_right_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickFeedback()}"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/release_margin"
                    android:text="用户意见反馈"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/comment_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/release_margin"
                    android:paddingStart="@dimen/release_margin_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_right_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickAboutUs()}"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/release_margin"
                    android:text="关于我们"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/comment_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/release_margin"
                    android:paddingStart="@dimen/release_margin_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_right_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_line"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:onClick="@{()->presenter.onClickCheckUpdate()}"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/release_margin"
                    android:text="检查更新"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/comment_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null"
                    android:paddingEnd="@dimen/release_margin"
                    android:paddingStart="@dimen/release_margin_small"
                    android:scaleType="centerInside"
                    android:src="@drawable/setting_right_icon" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/general_list_item_height"
                android:layout_marginTop="@dimen/release_margin"
                android:background="@android:color/white"
                android:gravity="center"
                android:onClick="@{()->presenter.onClicklogOut()}"
                android:text="退出登录"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/comment_size" />
        </LinearLayout>
    </LinearLayout>
</layout>