<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.me.presenter.FeedbackPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/feedback_title"
            bind:presenter="@{presenter}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/release_margin"
            android:orientation="vertical">

            <EditText
                android:id="@+id/feedback_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/release_margin"
                android:background="@drawable/feedback_style"
                android:gravity="top|start"
                android:hint="@string/feed_back_questions"
                android:padding="@dimen/release_margin_middle"
                android:textSize="@dimen/comment_size" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/release_margin"
                android:background="@drawable/release_gradient_shape"
                android:gravity="center"
                android:onClick="@{()->presenter.getData()}"
                android:text="@string/feed_back_commit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/general_text_size" />
        </LinearLayout>
    </LinearLayout>
</layout>