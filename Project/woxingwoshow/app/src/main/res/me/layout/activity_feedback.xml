<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="woxingwoxiu.com.me.presenter.FeedbackPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graySimple"
        android:orientation="vertical">
        <include layout="@layout/feedback_title"
            bind:presenter="@{presenter}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/feedback_style"
            android:hint="请描述您的问题："
            android:padding="5dp"
            android:id="@+id/feedback_content"
            android:gravity="top"/>

        <Button
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="提交"
            android:onClick="@{()->presenter.getData()}"
            android:background="@drawable/feedback_btn"/>
    </LinearLayout>

</layout>