<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="user"
            type="woxingwoxiu.com.bean.UserBean" />

        <variable
            name="presenter"
            type="woxingwoxiu.com.me.presenter.MeHomePresenter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/config_text_type_width"
            android:background="@drawable/title_back_img">
                <ImageView
                    android:id="@+id/me_add_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/release_margin"
                    android:layout_marginBottom="@dimen/release_edit_margin_right"
                    android:scaleType="centerInside"
                    android:src="@drawable/me_add_friend"
                    android:onClick="@{()->presenter.onClickFindFriends()}" />

                <TextView
                    android:id="@+id/me_title_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/share_to_friend"
                    android:layout_toRightOf="@+id/me_add_friend"
                    android:layout_marginBottom="@dimen/release_edit_margin_right"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/me_title_tx"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/release_middle_text_size" />

                <ImageView
                    android:id="@+id/share_to_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/release_edit_margin_right"
                    android:scaleType="centerInside"
                    android:layout_marginRight="@dimen/release_margin"
                    android:layout_toLeftOf="@+id/me_setting"
                    android:src="@drawable/me_share" />

                <ImageView
                    android:id="@+id/me_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/release_edit_margin_right"
                    android:layout_marginRight="@dimen/release_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/me_setting"
                    android:onClick="@{()->presenter.onClickSetting()}" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/release_margin"
            android:background="@color/graySimple"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_video_item_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:scaleType="centerCrop"
                android:src="@drawable/me_image"
                app:civ_border_color="#0000"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:background="@color/graySimple"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="12"
                                android:textColor="@color/colorBlack"
                                android:onClick="@{()->presenter.onClickFans()}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:onClick="@{()->presenter.onClickFans()}"
                                android:text="粉丝"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="12"
                                android:textColor="@color/colorBlack"
                                android:onClick="@{()->presenter.onClickAttention()}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:onClick="@{()->presenter.onClickAttention()}"
                                android:text="关注"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="12"
                                android:textColor="@color/colorBlack"
                                android:onClick="@{()->presenter.onClickMyTeam()}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:onClick="@{()->presenter.onClickMyTeam()}"
                                android:text="我的团队"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="12"
                                android:textColor="@color/colorBlack"
                                android:onClick="@{()->presenter.onClickMyWealth()}" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="50"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:onClick="@{()->presenter.onClickMyWealth()}"
                                android:text="财富值"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:background="@color/graySimple"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        android:onClick="@{()->presenter.onClickEdit()}"
                        android:src="@drawable/meedit" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="70"
                        android:onClick="@{()->presenter.onClickMyWealth()}"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/memoneyvalue" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/me_home_position" />

                <TextView
                    android:layout_width="326dp"
                    android:layout_height="20dp"
                    android:gravity="left"
                    android:paddingLeft="12dp"
                    android:text="济南"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:text="有趣的个性签名会吸引更多的粉丝哦~"
            android:textSize="14dp" />
        //SpringView和RecyclerView
        <LinearLayout
            android:id="@+id/me_home_fragment_tab_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <woxingwoxiu.com.widget.TabLayout
                android:id="@+id/me_home_fragment_tl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:tabIndicatorColor="@color/home_fragment_tab_indicator"
                app:tabSelectedTextColor="@color/home_fragment_tab_indicator"
                app:tabTextColor="@android:color/white">
            </woxingwoxiu.com.widget.TabLayout>
        </LinearLayout>

        <woxingwoxiu.com.widget.ScrollViewPager
            android:id="@+id/me_home_fragment_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </woxingwoxiu.com.widget.ScrollViewPager>
        <!-- Test用 -->
        <!--<Button-->
            <!--android:id="@+id/draft_list_btn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@android:color/holo_red_light"-->
            <!--android:text="待发布列表"-->
            <!--android:textColor="@android:color/white" />-->

    </LinearLayout>
</layout>
