<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="user"
            type="sdwxwx.com.bean.UserBean" />

        <variable
            name="presenter"
            type="sdwxwx.com.me.presenter.MeHomePresenter" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graySimple"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/immersion_title_bar_height"
            android:background="@drawable/title_back_img">

            <ImageView
                android:id="@+id/me_add_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/release_margin_middle"
                android:layout_marginStart="@dimen/release_margin"
                android:contentDescription="@null"
                android:onClick="@{()->presenter.onClickFindFriends()}"
                android:scaleType="centerInside"
                android:src="@drawable/me_add_friend" />

            <TextView
                android:id="@+id/me_title_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/me_add_friend"
                android:layout_toStartOf="@+id/share_to_friend"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_title_size" />

            <ImageView
                android:id="@+id/share_to_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/release_margin_middle"
                android:layout_marginEnd="@dimen/release_margin"
                android:layout_toStartOf="@+id/me_setting"
                android:contentDescription="@null"
                android:onClick="@{()->presenter.onClickShare()}"
                android:scaleType="centerInside"
                android:src="@drawable/me_share" />

            <ImageView
                android:id="@+id/me_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/release_margin_middle"
                android:layout_marginEnd="@dimen/release_margin"
                android:contentDescription="@null"
                android:onClick="@{()->presenter.onClickSetting()}"
                android:scaleType="centerInside"
                android:src="@drawable/me_setting" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginEnd="@dimen/release_margin"
            android:layout_marginStart="@dimen/release_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="3">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_video_item_head"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="@{()->presenter.onClickHeaderImg()}"
                        android:src="@drawable/default_header_image"
                        app:civ_border_color="#0000"
                        app:civ_border_width="1dp" />
                <ImageView
                        android:id="@+id/home_video_vip_head"
                        android:layout_alignRight="@+id/home_video_item_head"
                        android:layout_alignBottom="@+id/home_video_item_head"
                        android:src="@drawable/vip_icon"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:onClick="@{()->presenter.onClickFans()}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/followed_count"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/comment_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fans_home_fans"
                            android:textColor="@color/signature_color"
                            android:textSize="@dimen/common_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:onClick="@{()->presenter.onClickAttention()}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/follow_count"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/comment_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="@color/signature_color"
                            android:textSize="@dimen/common_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:onClick="@{()->presenter.onClickMyTeam()}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recommend_count"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/comment_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/fans_home_my_team"
                            android:textColor="@color/signature_color"
                            android:textSize="@dimen/common_small_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:onClick="@{()->presenter.onClickMyWealth()}"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sum_wealth"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/comment_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="财富值"
                            android:textColor="@color/signature_color"
                            android:textSize="@dimen/common_small_size" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:contentDescription="@null"
                        android:onClick="@{()->presenter.onClickEdit()}"
                        android:scaleType="centerInside"
                        android:src="@drawable/me_edit" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:contentDescription="@null"
                        android:onClick="@{()->presenter.onClickMyWealth()}"
                        android:paddingEnd="@dimen/release_margin_middle"
                        android:paddingStart="@dimen/release_margin_middle"
                        android:scaleType="centerInside"
                        android:src="@drawable/me_money_value" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:gravity="end"
                    android:src="@drawable/position" />

                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="326dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:paddingStart="0dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/common_small_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:paddingStart="15dp"
            android:text="有趣的个性签名会吸引更多的粉丝~"
            android:textColor="@color/signature_color"
            android:textSize="@dimen/comment_size" />

        <LinearLayout
            android:id="@+id/me_home_fragment_tab_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <sdwxwx.com.widget.TabLayout
                android:id="@+id/me_home_fragment_tl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/home_fragment_tab_indicator"
                app:tabTextColor="#be1313" />
        </LinearLayout>

        <sdwxwx.com.widget.ScrollViewPager
            android:id="@+id/me_home_fragment_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>
