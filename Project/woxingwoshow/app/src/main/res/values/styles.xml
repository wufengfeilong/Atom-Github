<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HomeBottomImageView" >
        <item name="android:padding">3dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="BottomFullDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="CustomDialog_fill" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/full_black</item>
    </style>
    <!-- REditText -->
    <declare-styleable name="REditText">
        <attr name="object_foreground_color" format="color" />
        <attr name="object_background_color" format="color" />
    </declare-styleable>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/activity_title_size</item>
    </style>

    <!-- 消息列表用户昵称与消息类型拼接显示 -->
    <style name="userStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="typeStyle">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
</resources>
