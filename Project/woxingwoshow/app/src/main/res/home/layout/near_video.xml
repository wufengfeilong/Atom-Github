<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.near.presenter.NearFragmentPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/immersion_title_bar_height"
            android:background="@drawable/title_back_img"
            android:fitsSystemWindows="true"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/release_margin"
            android:text="@string/near"
            android:textColor="@android:color/white"
            android:textSize="@dimen/activity_title_size" />

        <sdwxwx.com.widget.LoadStatusView
            android:id="@+id/near_lsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.liaoinstan.springview.widget.SpringView
                android:id="@+id/near_video_springView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/near_video_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.liaoinstan.springview.widget.SpringView>
        </sdwxwx.com.widget.LoadStatusView>
    </LinearLayout>
</layout>