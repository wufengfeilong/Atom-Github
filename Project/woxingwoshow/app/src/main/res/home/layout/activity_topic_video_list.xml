<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.home.presenter.TopicVideoListPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/immersion_title_bar_height"
            android:background="@drawable/title_back_img"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/find_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/release_margin"
                android:onClick="@{()->presenter.back()}"
                android:src="@drawable/back_white" />

            <TextView
                android:id="@+id/txt_catagory_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/release_margin"
                android:text="话题视频"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_title_size" />
        </RelativeLayout>

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/topic_video_springView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/topic_video_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.liaoinstan.springview.widget.SpringView>
    </LinearLayout>
</layout>
