<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="280dp">
    <ImageView
            android:id="@+id/near_video_item_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
    />
    <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"/>
        <TextView
                android:id="@+id/near_video_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="m"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/near_video_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:maxLines="2"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/near_video_item_head"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#0000"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/near_video_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"/>
                <TextView
                        android:id="@+id/near_video_item_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                />
            </LinearLayout>
            <LinearLayout
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/thumbsup"/>
                <TextView
                        android:id="@+id/near_video_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@android:color/white"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>