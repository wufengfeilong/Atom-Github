<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="sdwxwx.com.home.HomePresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_bottom_nav_height"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/home_btm_menu_home"
                style="@style/HomeBottomImageView"
                android:onClick="@{()->presenter.toHome()}"
                android:src="@drawable/home_selected" />

            <ImageView
                android:id="@+id/home_btm_menu_near"
                style="@style/HomeBottomImageView"
                android:onClick="@{()->presenter.toNear()}"
                android:src="@drawable/near_no_select" />

            <ImageView
                android:id="@+id/home_btm_menu_capture"
                style="@style/HomeBottomImageView"
                android:onClick="@{()->presenter.toCapture()}"
                android:src="@drawable/capture" />

            <ImageView
                android:id="@+id/home_btm_menu_msg"
                style="@style/HomeBottomImageView"
                android:onClick="@{()->presenter.toMsg()}"
                android:src="@drawable/info_no_select" />

            <ImageView
                android:id="@+id/home_btm_menu_me"
                style="@style/HomeBottomImageView"
                android:onClick="@{()->presenter.toMe()}"
                android:src="@drawable/me_no_select" />
        </LinearLayout>
    </LinearLayout>
</layout>
