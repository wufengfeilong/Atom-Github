<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:weightSum="5"
        android:padding="10dp">
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/play_video_say_sth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/say_sth"
                android:cursorVisible="false"
                android:background="@drawable/ellipse_shape_bg"/>
        <ImageView
                android:id="@+id/play_video_at_sb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/play_comment_at"/>
    </RelativeLayout>
    <Button
            android:id="@+id/play_video_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:padding="10dp"
            android:text="@string/send"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/circle_corner_shape_btn_bg"/>
</LinearLayout>
