<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="10dp">

        <TextView
                android:id="@+id/play_all_comment_tv"
                android:text="全部评论"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/play_comment_lef_tv"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/play_all_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
        />
        <TextView
                android:text="143"
                android:id="@+id/play_comment_count"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/play_comment_lef_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <TextView
                android:textSize="20sp"
                android:layout_toRightOf="@+id/play_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
        />
        <ImageView
                android:id="@+id/play_video_comment_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/play_video_close_gray"
        />
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"/>
    <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/play_video_comment_sv"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/play_video_comment_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:weightSum="5"
            android:padding="10dp">
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/play_comment_say_sth"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="@string/say_sth"
                    android:cursorVisible="false"
                    android:background="@drawable/ellipse_shape_bg"/>
            <ImageView
                    android:id="@+id/play_comment_at_sb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/play_comment_at"/>
        </RelativeLayout>
        <Button
                android:id="@+id/play_comment_send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:padding="10dp"
                android:text="@string/send"
                android:textColor="@android:color/darker_gray"
                android:background="@drawable/circle_corner_shape_btn_bg"/>
    </LinearLayout>

</LinearLayout>
